// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Activity {
  id        String   @id @default(uuid())
  type      String
  name      String?
  duration  Int?
  reps      Int?
  distance  Float?
  timestamp DateTime
}

model Vital {
  id        String   @id @default(uuid())
  name      String
  value     Float
  timestamp DateTime
}

model Meal {
  id          String   @id @default(uuid())
  name        String
  description String
  timestamp   DateTime
}
